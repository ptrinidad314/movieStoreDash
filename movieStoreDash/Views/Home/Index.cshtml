@model movieStoreDash.Models.HomeIndexDTO

@{
    ViewData["Title"] = "Home Page";
}


@*<div class="container">*@
    <div class="row" style="width:100%">
        <div class="col-12 col-sm-2 text-truncate leftSideNav">
            <h4>Select a film:</h4>
            <ul class="list-group">
                @foreach (var film in Model.films)
                {
                    <li class="list-group-item" onclick="displayActors('@film.FilmId')">@film.Title</li>
                }
            </ul>
        </div>
        <div class="col-12 col-sm-10" style="width:100%">
            <nav class="nav nav-pills flex-column flex-sm-row">
                <a id="actorTabPill" class="flex-sm-fill text-sm-center nav-link active" href="#" onclick="actorTabClick()">Actors</a>
                <a id="moreInfoPill" class="flex-sm-fill text-sm-center nav-link" href="#" onclick="moreInfoTabClick()">more info</a>
                <a id="yetMoreInfoPill" class="flex-sm-fill text-sm-center nav-link" href="#" onclick="yetMoreInfoTabClick()">yet more info</a>
                <a id="disabledPill" class="flex-sm-fill text-sm-center nav-link disabled" href="#">Disabled</a>
            </nav>

            <form>
                <div id="actorTab">
                    @*action="/home/UpdateActorInfo" method="post">*@
                    <input type="hidden" id="actorId" name="actorId" value="" />
                    <input type="hidden" id="actorSocialMediaURL" name="actorSocialMediaURL" value="" />

                    <div class="row">
                        <div class="col-12 filmActorList" >
                            <ul id="filmActors" class="list-group">
                            </ul>
                        </div>
                    </div>
                    <div id="actorInfo" class="d-none row">

                        <div class="col-12 col-sm-8">
                            @*<p id="bio">bio</p>*@
                            @*<textarea class="form-control" id="bio" style="height:100%" name="bio"></textarea>*@
                            <iframe id="mediaIF" src="" class="mediaIF"></iframe>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div>
                                @*<img style="width:100%" src="~/image/ospan-ali-Dh-Ip3YKAEM-unsplash.jpg" />*@
                                <img id="actorImg" class="img-fluid" src="~/image/mathilde-langevin-e6UgBVsXecA-unsplash.jpg" />
                            </div>
                            <div class="form-group">
                                <label for="firstName">First Name</label>
                                <input id="firstName" class="form-control" type="text" name="firstName" value="" />
                            </div>
                            <div class="form-group">
                                <label for="lastName">Last Name</label>
                                <input id="lastName" class="form-control" type="text" name="lastName" value="" />
                            </div>
                           

                            <div class="form-group">
                                <label for="socialMediaURL">Social Media URL</label>
                                <div class="input-group mb-3">
                                    <input type="text" id="socialMediaURL" name="socialMediaURL" class="form-control" value="" placeholder="Recipient's social media" aria-label="Recipient's social media" aria-describedby="button-addon2">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary" type="button" id="button-addon2" onclick="displaySocialMedia()"><i class="fas fa-window-restore"></i></i></button>
                                    </div>
                                </div>
                            </div>

                            <button class="btn btn-danger" onclick="displayTest()">TEST</button>

                            <button type="button" class="btn btn-dark" onclick="UpdateActorInfo()">Update</button>
                        </div>
                    </div>
                </div>
                <div id="moreInfo" class="d-none">
                    <h1>more info tab</h1>
                    <button type="button" class="btn btn-danger" onclick="runTest()">TEST</button>
                </div>
                <div id="yetMoreInfo" class="d-none">
                    <h1>yet more info tab</h1>
                </div>
            </form>
        </div>
    </div>

@*</div>*@


<div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px; z-index:10000">
    <div class="toast" style="position: absolute; top: 0; right: 0;">
        <div class="toast-header">
            <img src="..." class="rounded mr-2" alt="...">
            <strong class="mr-auto">Bootstrap</strong>
            <small>11 mins ago</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Hello, world! This is a toast message.
        </div>
    </div>
</div>
